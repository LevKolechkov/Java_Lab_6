<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.canvas.Canvas?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>

<BorderPane xmlns:fx="http://javafx.com/fxml" fx:controller="org.example.lab_6.Controller">
    <center>
        <Canvas fx:id="canvas" width="600" height="400"/>
    </center>
    <bottom>
        <HBox alignment="CENTER" spacing="10.0">
            <padding>
                <Insets top="10" bottom="10" left="20" right="20"/>
            </padding>
            <Button text="Draw Circle" onAction="#onDrawCircleClick"/>
            <Button text="Draw Rectangle" onAction="#onDrawRectangleClick"/>
        </HBox>
    </bottom>
</BorderPane>
